---

interface Props {
    title: string
    content?: string
}
const { title, content } = Astro.props
---

<div class="card">
  <h1>{title}</h1>
  <p>
    {content}
  </p>
</div>

<style>
  .card {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin-bottom: 1rem;
    padding: 1rem;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
  }
</style>
